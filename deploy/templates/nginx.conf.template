# nginx.conf.template
# Configuración base para servir SPA y proxy opcional al backend.

server {
    listen 80;
    server_name _;

    # Seguridad básica
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Gzip para activos estáticos
    gzip on;
    gzip_types text/plain text/css application/json application/javascript application/xml+rss image/svg+xml;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
        expires 1h;
        add_header Cache-Control "public";
    }

    # Backend opcional: descomenta y ajusta host/puerto
    # location /api/ {
    #     proxy_pass http://backend:8000/;
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    #     proxy_read_timeout 120s;
    # }

    location /static/ {
        try_files $uri =404;
        expires 1d;
        add_header Cache-Control "public";
    }

    location /media/ {
        alias /app/media/;
        expires 1d;
        add_header Cache-Control "private";
    }

    client_max_body_size 20m;
}
