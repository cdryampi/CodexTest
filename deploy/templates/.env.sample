# Variables compartidas backend/frontend
DJANGO_SECRET_KEY=change-me
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1,app.example.com
CORS_ALLOWED_ORIGINS=https://app.example.com,https://staging.example.com
CSRF_TRUSTED_ORIGINS=https://app.example.com,https://staging.example.com
DJANGO_SECURE_SSL_REDIRECT=1

# Base de datos (elige una de las opciones)
# Opción PostgreSQL
POSTGRES_DB=backend
POSTGRES_USER=backend
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=

# Opción SQLite (comentada por defecto)
# DATABASE_URL=sqlite:////app/db.sqlite3

# Configuración backend adicional
GUNICORN_WORKERS=3
GUNICORN_THREADS=1
GUNICORN_TIMEOUT=120
DB_MAX_RETRIES=30
DB_RETRY_DELAY=1
SEED_ON_STARTUP=0

# Integraciones
VITE_OPEN_IA_KEY=sk-...

# Frontend
VITE_API_BASE_URL=https://api.example.com

# URLs auxiliares
BACKEND_URL=https://api.example.com
FRONTEND_URL=https://app.example.com
