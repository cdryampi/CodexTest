# Dockerfile.frontend.template
# Multi-stage build: Node (build) + Nginx (runtime).

FROM node:18-alpine AS build
WORKDIR /app

ENV NODE_ENV=production

COPY frontend/package*.json ./
RUN npm ci

COPY frontend ./
RUN npm run build

FROM nginx:alpine AS runtime

# Copia la configuraci√≥n personalizada
COPY deploy/templates/nginx.conf.template /etc/nginx/conf.d/default.conf

# Copia artefactos
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

HEALTHCHECK --interval=30s --timeout=5s --retries=5 CMD curl -fsS http://localhost/ || exit 1

CMD ["nginx", "-g", "daemon off;"]
